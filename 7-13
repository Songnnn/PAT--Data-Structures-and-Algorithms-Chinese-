#include<bits/stdc++.h>
using namespace std;

int A[51];

int main()
{
    int n;
    scanf("%d",&n);
    fill(A,A+51,-1);
    for( int i=0 ; i<n ; i++ )
    {
        int a;
        scanf("%d",&a);
        A[a]++;
    }

    for( int i=0 ; i<51 ; i++ )
    {
        if( A[i]!=-1 ) printf("%d:%d\n",i,A[i]+1);
    }
    return 0;
}
